@article{hudde2019,
  title = {Having Power, Having Babies? {{Fertility}} Patterns among {{German}} Elite Politicians: {{Viel Macht}}, Viele {{Kinder}}? {{Ein Einblick}} in Die {{Fertilitätsmuster}} Deutscher {{Spitzenpolitikerinnen}} Und {{Spitzenpolitiker}}},
